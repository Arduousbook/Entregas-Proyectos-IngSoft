<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="Main" alignment="CENTER" spacing="20.0" stylesheets="@style_1.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javeriana.Study_With_Me.controller.Subject_windowController">
   <Label id="title" text="Materias" />
   <VBox maxWidth="820.0" prefWidth="820.0">
      <children>
         <Label id="room1" text="Seleccione sus materias:" />
         <BorderPane id="asignaturas">
            <top>
               <ScrollPane BorderPane.alignment="CENTER">
                  <content>
                     <VBox id="asignaturas" fx:id="checkBoxArea" />
                  </content>
               </ScrollPane>
            </top>
         </BorderPane>
      </children>
   </VBox>
   <Label id="warning" fx:id="warning" />
   <Button fx:id="confirm" mnemonicParsing="false" onAction="#confirmSubjects" text="Continuar" />
   <Button fx:id="back" mnemonicParsing="false" onAction="#onBackClick" text="Volver" />
</VBox>
